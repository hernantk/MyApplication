        app:layout_constraintTop_toBottomOf="@+id/imgCamera" />

    <TextView
        android:id="@+id/tvTitleCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="272dp"
        android:text="@string/title_item_memory_city"
        app:layout_constraintEnd_toEndOf="@+id/imgCamera"
        app:layout_constraintStart_toEndOf="@+id/tvTitleDate"
        app:layout_constraintTop_toBottomOf="@+id/imgCamera" />

